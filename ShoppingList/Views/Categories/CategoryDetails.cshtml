@using ShoppingList.Models.Categories
@model CategoryViewModel

<h1>Category: @Model.Name</h1>

<form method="post" asp-controller="Categories" asp-action="EditCategory" asp-route-id="@Model.Id">
    <!-- Name input -->
    <div class="form-outline mb-4">
        <input type="text" class="form-control" asp-for="@Model.Name" />
        <label class="form-label"></label>
    </div>


    @foreach (var product in Model.Products)
    {
        <div>@product.Name</div>
    }

    <button type="submit" class="btn btn-primary btn-block mb-4">Edit</button>

</form>